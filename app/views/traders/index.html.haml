.container-fluid
  %h1 Traders Page
  %br

  .row
    .col-md-3
      .panel.panel-success
        .panel-heading Trendline Profit - ALL
        .panel-body
          %h3.text-muted
            = @trendline_profit_all_count
            contracts
          %h1= number_to_currency @trendline_profit_all_value
          %h1= number_to_percentage @trendline_profit_all_percent
    .col-md-3
      .panel.panel-success
        .panel-heading Trendline Profit - MONTH
        .panel-body
          %h3.text-muted
            = @trendline_profit_month_count
            contracts
          %h1= number_to_currency @trendline_profit_month_value
          %h1= number_to_percentage @trendline_profit_month_percent
    .col-md-3
      .panel.panel-success
        .panel-heading Trendline Profit - WEEK
        .panel-body
          %h3.text-muted
            = @trendline_profit_week_count
            contracts
          %h1= number_to_currency @trendline_profit_week_value
          %h1= number_to_percentage @trendline_profit_week_percent
    - @traders.each do |trader|
      .col-md-3
        .panel.panel-info
          .panel-heading
            = trader.name
            - if trader.is_active
              = link_to "TURN OFF", trader_path(trader, is_active: false), method: :put, :class => "btn btn-xs btn-danger pull-right"
            - else
              = link_to "TURN ON", trader_path(trader, is_active: true), method: :put, :class => "btn btn-xs btn-success pull-right"
          .panel-body
            %li
              Active:
              = trader.is_active ? "YES" : "NO"
            %li
              Market-Maker:
              = trader.is_market_maker ? "YES" : "NO"
            %li
              Trendline:
              = trader.is_trendline ? "YES" : "NO"

  .h3 Charts
  = high_chart_globals(@chart_settings)

  / = high_chart("chart-1", @chart1)
  = high_chart("Account Growth", @chart2)
  = high_chart("Contracts Profit", @chart3)
  / = high_chart("Open Contracts", @chart4)
  = high_chart("Unresolved Contracts", @chart5)
  / = high_chart("chart-6", @chart6)
  / = high_chart("chart-7", @chart7)
  = high_chart("Weighted Moving Averages", @chart8)
  = high_chart("Trendline Contracts - Trendline Values", @chart9)
  = high_chart("Trendline Contracts - Average ROI", @chart10)
